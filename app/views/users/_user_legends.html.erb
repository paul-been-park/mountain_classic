<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Legends

    <a data-toggle="collapse" href="#user_legends_new_form">
      Add legend
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.legends.each do |legend| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to legend, legend %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_legends_new_form">
        <%= render partial: "users/user_legends_new_form" %>
      </div>
    </div>

  </ul>
</div>
