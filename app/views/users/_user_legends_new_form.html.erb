<%= form_with(model: @legend, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :name %>

    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :photo %>

    <%= f.text_field :photo, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :bio %>

    <%= f.text_field :bio, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <%= f.submit "Create legend", class: "btn btn-block btn-outline-secondary" %>
<% end %>
