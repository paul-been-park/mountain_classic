<%= form_with(model: @interaction, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :tick %>

    <%= f.text_field :tick, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :summited %>

    <%= f.text_field :summited, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :climb_id %>

    <%= f.collection_select :climb_id, Climb.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create interaction", class: "btn btn-block btn-outline-secondary" %>
<% end %>
