<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ticks

    <a data-toggle="collapse" href="#user_ticks_new_form">
      Add interaction
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.ticks.each do |interaction| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to interaction, interaction %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_ticks_new_form">
        <%= render partial: "users/user_ticks_new_form" %>
      </div>
    </div>

  </ul>
</div>
