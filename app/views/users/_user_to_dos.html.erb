<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    To Dos

    <a data-toggle="collapse" href="#user_to_dos_new_form">
      Add to do
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.to_dos.each do |to_do| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to to_do, to_do %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_to_dos_new_form">
        <%= render partial: "users/user_to_dos_new_form" %>
      </div>
    </div>

  </ul>
</div>
