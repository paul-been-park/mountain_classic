<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    First Ascents

    <a data-toggle="collapse" href="#legend_first_ascents_new_form">
      Add first ascent
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @legend.first_ascents.each do |first_ascent| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to first_ascent, first_ascent %>

        <%= link_to first_ascent, method: :delete, data: { confirm: "Do you really want to delete this first_ascent" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="legend_first_ascents_new_form">
        <%= render partial: "legends/legend_first_ascents_new_form" %>
      </div>
    </div>

  </ul>
</div>
