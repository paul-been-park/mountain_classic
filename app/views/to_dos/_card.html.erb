<div class="card mb-3">
  <h2 class="card-header h4">
    To Do #<%= to_do.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @to_do.user.present? %>
          <%= link_to to_do.user, to_do.user %>
        <% end %>
      </dd>

      <dt>Climb</dt>
      <dd>
        <% if @to_do.climb.present? %>
          <%= link_to to_do.climb, to_do.climb %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back to_do, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_to_do_url(to_do), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to to_do, method: :delete, data: { confirm: "Do you really want to delete this to_do?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(to_do.updated_at) %> ago
  </div>
</div>
