<div class="card mb-3">
  <h2 class="card-header h4">
    Mountain #<%= mountain.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Region</dt>
      <!-- Display region_id start -->
      <dd><%= mountain.region_id %></dd>
      <!-- Display region_id end -->

      <dt>Mountain name</dt>
      <!-- Display mountain_name start -->
      <dd><%= mountain.mountain_name %></dd>
      <!-- Display mountain_name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back mountain, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link mountain start -->
      <div class="col">
        <%= link_to edit_mountain_url(mountain), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link mountain end -->

      <!-- Delete link mountain start -->
      <div class="col">
        <%= link_to mountain, method: :delete, data: { confirm: "Do you really want to delete this mountain?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link mountain end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(mountain.updated_at) %> ago
  </div>
</div>
