<div class="card mb-3">
  <h2 class="card-header h4">
    Climb #<%= climb.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Route name</dt>
      <dd><%= climb.route_name %></dd>

      <dt>Length</dt>
      <dd><%= climb.length %></dd>

      <dt>Grade</dt>
      <dd><%= climb.grade %></dd>

      <dt>Guide url</dt>
      <dd><%= climb.guide_url %></dd>

      <dt>Climb photo</dt>
      <dd>
        <%= cl_image_tag @climb.climb_photo, class: "img-fluid" %>
      </dd>

      <dt>Mountain</dt>
      <dd>
        <% if @climb.mountain.present? %>
          <%= link_to climb.mountain, climb.mountain %>
        <% end %>
      </dd>

      <dt>Description</dt>
      <dd><%= climb.description %></dd>

      <dt>Classic</dt>
      <dd><%= climb.classic %></dd>

      <dt>Location</dt>
      <dd>
        <div>
          <%= render partial: "climbs/one_photo_map" %>
        </div>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back climb, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_climb_url(climb), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to climb, method: :delete, data: { confirm: "Do you really want to delete this climb?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(climb.updated_at) %> ago
  </div>
</div>
