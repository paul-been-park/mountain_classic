<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Interactions

    <a data-toggle="collapse" href="#climb_interactions_new_form">
      Add interaction
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @climb.interactions.each do |interaction| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to interaction, interaction %>

        <%= link_to interaction, method: :delete, data: { confirm: "Do you really want to delete this interaction" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="climb_interactions_new_form">
        <%= render partial: "climbs/climb_interactions_new_form" %>
      </div>
    </div>

  </ul>
</div>
