<%= search_form_for @q, :class => collapse_search_form, :id => "climbs_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :route_name_cont, "Route name contains" %>
    <%= f.text_field :route_name_cont, :class => "form-control", :placeholder => "Route name contains" %>
  </div>

  <div class="form-group">
    <%= f.label :classic_cont, "Classic contains" %>
    <%= f.text_field :classic_cont, :class => "form-control", :placeholder => "Classic contains" %>
  </div>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :guide_url_cont, "Guide url contains" %>
    <%= f.text_field :guide_url_cont, :class => "form-control", :placeholder => "Guide url contains" %>
  </div>

  <div class="form-group">
    <%= f.label :grade_cont, "Grade contains" %>
    <%= f.text_field :grade_cont, :class => "form-control", :placeholder => "Grade contains" %>
  </div>

  <div class="form-group">
    <%= f.label :length_cont, "Length contains" %>
    <%= f.text_field :length_cont, :class => "form-control", :placeholder => "Length contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :created_at, "Comment Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='commentsgteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :comments_created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Comment Created at greater than or equal to", :data => {:target => '#commentsgteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#commentsgteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='commentslteqcreated_atPicker' data-target-input="nearest">
          <%= f.text_field :comments_created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Comment Created at less than or equal to", :data => {:target => '#commentslteqcreated_atPicker'} %>
          <div class="input-group-append" data-target='#commentslteqcreated_atPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#commentsgteqcreated_atPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#commentslteqcreated_atPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#commentsgteqcreated_atPicker').on("dp.change", function (e) {
              $('#commentslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#commentslteqcreated_atPicker').on("dp.change", function (e) {
              $('#commentsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :interactions_tick_cont, "Interactions tick contains" %>
    <%= f.text_field :interactions_tick_cont, :class => "form-control", :placeholder => "Interactions tick contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/climbs" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#climbs_filters">
  Show filters
</a>
