<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Summits

    <a data-toggle="collapse" href="#climb_summits_new_form">
      Add summit
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @climb.summits.each do |summit| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to summit, summit %>

        <%= link_to summit, method: :delete, data: { confirm: "Do you really want to delete this summit" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="climb_summits_new_form">
        <%= render partial: "climbs/climb_summits_new_form" %>
      </div>
    </div>

  </ul>
</div>
