<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    First Ascents

    <a data-toggle="collapse" href="#climb_first_ascents_new_form">
      Add first ascent
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @climb.first_ascents.each do |first_ascent| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to first_ascent, first_ascent %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to first_ascent, method: :delete, data: { confirm: "Do you really want to delete this first_ascent" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="climb_first_ascents_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
