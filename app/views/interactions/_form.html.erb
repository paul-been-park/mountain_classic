<% was_validated = interaction.errors.any? %>

<%= form_with(model: interaction, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% tick_class = "form-control" %>
    <% tick_was_invalid = interaction.errors.include?(:tick) %>

    <% if was_validated %>
      <% if tick_was_invalid %>
        <% tick_class << " is-invalid" %>
      <% else %>
        <% tick_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :tick %>
    <%= f.text_field :tick, class: tick_class, placeholder: "Enter tick" %>
    <% if tick_was_invalid %>
      <% interaction.errors.full_messages_for(:tick).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% summited_class = "form-control" %>
    <% summited_was_invalid = interaction.errors.include?(:summited) %>

    <% if was_validated %>
      <% if summited_was_invalid %>
        <% summited_class << " is-invalid" %>
      <% else %>
        <% summited_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :summited %>
    <%= f.text_field :summited, class: summited_class, placeholder: "Enter summited" %>
    <% if summited_was_invalid %>
      <% interaction.errors.full_messages_for(:summited).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% user_class = "form-control" %>
    <% user_was_invalid = interaction.errors.include?(:user) %>

    <% if was_validated %>
      <% if user_was_invalid %>
        <% user_class << " is-invalid" %>
      <% else %>
        <% user_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
    <% if user_was_invalid %>
      <% interaction.errors.full_messages_for(:user).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% climb_class = "form-control" %>
    <% climb_was_invalid = interaction.errors.include?(:climb) %>

    <% if was_validated %>
      <% if climb_was_invalid %>
        <% climb_class << " is-invalid" %>
      <% else %>
        <% climb_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :climb_id %>
    <%= f.collection_select :climb_id, Climb.all, :id, :to_s, {}, class: "form-control" %>
    <% if climb_was_invalid %>
      <% interaction.errors.full_messages_for(:climb).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
