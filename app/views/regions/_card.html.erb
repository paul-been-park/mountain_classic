<div class="card mb-3">
  <h2 class="card-header h4">
    Region #<%= region.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Region name</dt>
      <!-- Display region_name start -->
      <dd><%= region.region_name %></dd>
      <!-- Display region_name end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back region, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link region start -->
      <div class="col">
        <%= link_to edit_region_url(region), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link region end -->

      <!-- Delete link region start -->
      <div class="col">
        <%= link_to region, method: :delete, data: { confirm: "Do you really want to delete this region?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link region end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(region.updated_at) %> ago
  </div>
</div>
