<%= form_with(model: @mountain, local: true) do |f| %>

  <%= f.hidden_field :region_id, value: @region.id %>

  <div class="form-group">
    <%= f.label :mountain_name %>

    <%= f.text_field :mountain_name, class: "form-control" %>
  </div>

  <%= f.submit "Create mountain", class: "btn btn-block btn-outline-secondary" %>
<% end %>
